<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_1135._0._1.MainPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Grid.Column="4">
            <Label Text="лабуба" />
            <Label Text="текст" />
        </StackLayout>
        <StackLayout Grid.Row="1" Grid.Column="0">
        <Button Text="%" HeightRequest="30" CornerRadius="30" Background="Gray"/>
            <Button Text="CE" HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="7" HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="4"  HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="1" HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="+-" HeightRequest="30" CornerRadius="30" Background="Black"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Grid.Column="1">
            <Button Text="√" HeightRequest="30" CornerRadius="30" Background="Gray"/>
            <Button Text="C" HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="8" HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="5"  HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="2" HeightRequest="30 " CornerRadius="30" Background="Black"/>
            <Button Text="0" HeightRequest="30" CornerRadius="30" Background="Black"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Grid.Column="2">
            <Button Text="x²" HeightRequest="30" CornerRadius="30" Background="Gray"/>
            <Button Text="DEL" HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="9" HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="6"  HeightRequest="30" CornerRadius="30" Background="Black"/>
            <Button Text="3" HeightRequest="30 " CornerRadius="30" Background="Black"/>
            <Button Text="," HeightRequest="30" CornerRadius="30" Background="Black"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Grid.Column="3">
            <Button Text="1/x" HeightRequest="30" CornerRadius="30" Background="Orange"/>
            <Button Text="/" HeightRequest="30" CornerRadius="30" Background="Orange"/>
            <Button Text="X" HeightRequest="30" CornerRadius="30" Background="Orange"/>
            <Button Text="-"  HeightRequest="30" CornerRadius="30" Background="Orange"/>
            <Button Text="+" HeightRequest="30 " CornerRadius="30" Background="Orange"/>
            <Button Text="=" HeightRequest="30" CornerRadius="30" Background="Orange"/>
        </StackLayout>
    </Grid>
</ContentPage>